FROM edoburu/pgbouncer

ARG DB_NAME
ARG DB_HOST
ARG DB_USER
ARG DB_PASSWORD
ARG POOL_MODE
ARG ADMIN_USERS
ARG MAX_CLIENT_CONN

ENV DB_NAME=${DB_NAME} \
    DB_HOST=${DB_HOST} \
    DB_USER=${DB_USER} \
    DB_PASSWORD=${DB_PASSWORD} \
    POOL_MODE=${POOL_MODE} \
    ADMIN_USERS=${ADMIN_USERS} \
    MAX_CLIENT_CONN=${MAX_CLIENT_CONN}
